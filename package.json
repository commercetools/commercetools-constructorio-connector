{
  "name": "%%service_name%%",
  "version": "0.1.0",
  "description": "%%service_description%%",
  "watch": {
    "dev": "src"
  },
  "scripts": {
    "start": "dotenv -e config/${NODE_ENV:-development}.env -e ./.env node src/index.js",
    "dev": "dotenv -e config/${NODE_ENV:-development}.env -e ./.env nodemon src/index.js",
    "docs": "serve -p ${DOCSPORT:-5000} docs",
    "lint": "yarn run lint:js && yarn run lint:helm",
    "lint:js": "prettier-eslint $INIT_CWD/src/**/*.js",
    "lint:js:fix": "prettier-eslint --write $INIT_CWD/src/**/*.js",
    "lint:helm": "helm lint ${npm_package_name}",
    "test": "cross-env NODE_ENV=development jest --passWithNoTests",
    "test:watch": "cross-env NODE_ENV=development jest --watch",
    "ci-lint": "yarn run lint",
    "ci-test": "yarn run test",
    "ci-package": "docker build --tag %%docker_image_url%%:%%docker_image_tag%% .",
    "ci-package-clean": "docker build --no-cache --tag %%docker_image_url%%:%%docker_image_tag%% .",
    "ci-push-with-namespace-create": "kubectl create namespace ${npm_package_name} && docker push %%docker_image_url%%:%%docker_image_tag%%",
    "ci-push": "docker push %%docker_image_url%%:%%docker_image_tag%%",
    "ci-deploy": "helm upgrade ${npm_package_name} helm-chart --install --wait --force --namespace ${npm_package_name} --set image.tag=%%docker_image_tag%%",
    "ci-undeploy": "helm uninstall ${npm_package_name} --namespace ${npm_package_name}"
  },
  "engines": {
    "node": ">= 12"
  },
  "keywords": [
    "commercetools",
    "node",
    "microservices"
  ],
  "author": "commercetools",
  "license": "MIT",
  "repository": "",
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.6.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.1.1",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "prettier-eslint-cli": "^4.7.1",
    "validate-commit": "^3.4.0"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^1.6.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^5.1.3",
    "ctvault": "^1.0.10",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.1.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "nconf": "^0.10.0",
    "redoc": "^1.20.0",
    "serve": "^6.4.9"
  },
  "jest": {
    "rootDir": "src",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "services/**/*.js"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
