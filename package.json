{
  "name": "%%service_name%%",
  "version": "0.1.0",
  "description": "%%service_description%%",
  "watch": {
    "dev": "src"
  },
  "scripts": {
    "precommit": "lint-staged && yarn run lint:helm",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "yarn run lint:js && yarn run lint:helm",
    "lint:js": "prettier-eslint $INIT_CWD/src/**/*.js",
    "lint:helm": "helm lint helm-chart",
    "test": "cross-env NODE_ENV=development jest --passWithNoTests",
    "test:watch": "cross-env NODE_ENV=development jest --watch",
    "ci-lint": "yarn run lint",
    "ci-test": "yarn run test",
    "ci-package": "docker build --tag %%docker_image_url%%:%%docker_image_tag%% .",
    "ci-push": "docker push %%docker_image_url%%:%%docker_image_tag%%",
    "ci-deploy": "helm uninstall ${npm_package_name} --namespace ${npm_package_name} && helm upgrade ${npm_package_name} helm-chart --install --wait --force --namespace ${npm_package_name} --set image.tag=%%docker_image_tag%%",
    "ci-undeploy": "helm uninstall ${npm_package_name} --namespace ${npm_package_name}"
  },
  "engines": {
    "node": ">= 12"
  },
  "keywords": [
    "commercetools",
    "node",
    "microservices"
  ],
  "author": "commercetools",
  "license": "MIT",
  "repository": "",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^22.1.1",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "prettier-eslint-cli": "^4.7.1",
    "validate-commit": "^3.4.0"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^1.6.0",
    "app-root-path": "^3.0.0",
    "async-lodash": "^1.0.9",
    "body-parser": "^1.19.0",
    "clean-deep": "^3.3.0",
    "cors": "^2.8.5",
    "cross-env": "^5.1.3",
    "ctvault": "^1.0.21",
    "express": "^4.17.1",
    "firebase-admin": "^8.11.0",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "nconf": "^0.10.0",
    "redoc": "^1.20.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "slugify": "^1.4.0"
  },
  "jest": {
    "rootDir": "src",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "services/**/*.js"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
